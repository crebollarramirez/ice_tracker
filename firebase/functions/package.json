{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:unit": "jest --testMatch '**/unit/**/*.test.ts' --testMatch '**/unit/**/*.spec.ts'",
    "test:integration": "jest --testMatch '**/integration/**/*.test.ts' --testMatch '**/integration/**/*.spec.ts'",
    "test:e2e": "jest --runInBand --testMatch '**/e2e/**/*.e2e.ts'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:emulators": "firebase emulators:start --only database,firestore,functions,auth --project iceinmyarea"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "dotenv": "^17.2.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.1.6"
  },
  "private": true
}