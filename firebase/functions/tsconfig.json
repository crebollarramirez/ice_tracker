{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
