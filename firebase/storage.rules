rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ðŸš« Block ALL reads
    match /{allPaths=**} {
      allow read: if false;
    }

    // âœ… Allow users to write ONLY to their own folder
    match /reports/pending/{uid}/{fileName} {
      allow write: if request.auth != null &&
                    request.auth.uid == uid;
    }
  }
}
